  <script>
    document.querySelectorAll(".button").forEach((button) => {
      let div = document.createElement("div");
      let letters = button.textContent.trim().split("");

      letters.forEach((letter, index) => {
        let span = document.createElement("span");
        let part = index >= letters.length / 2 ? -1 : 1;
        let position =
          index >= letters.length / 2
            ? letters.length / 2 - index + (letters.length / 2 - 1)
            : index;
        let move = position / (letters.length / 2);
        let rotate = 1 - move;

        span.innerHTML = letter.trim() ? letter : "&nbsp;";
        span.style.setProperty("--move", move);
        span.style.setProperty("--rotate", rotate);
        span.style.setProperty("--part", part);
        div.appendChild(span);
      });

      button.innerHTML = "";
      button.appendChild(div);

      button.addEventListener("mouseenter", () => {
        if (!button.classList.contains("out")) {
          button.classList.add("in");
        }
      });

      button.addEventListener("mouseleave", () => {
        if (button.classList.contains("in")) {
          button.classList.add("out");
          setTimeout(() => button.classList.remove("in", "out"), 950);
        }
      });
    });

  fetch("/concepts")
