<% soif_suite_frames    = (1..97).map { |i| asset_path("HOMEPAGE/SUITEBAOGER/SOIFSUITE#{i}.webp") } %>
<% starters_suite_frames = (1..89).map { |i| asset_path("HOMEPAGE/SUITEBAOGER/STARTERSUITE#{i}.webp") } %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Accueil - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,700;1,700&display=swap" rel="stylesheet"/>
  <style>
    @font-face {
      font-family: "ThisIsTheFuture";
      src: url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.eot' %>");
      src:
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.eot' %>#iefix")
          format("embedded-opentype"),
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.ttf' %>")
          format("truetype"),
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.otf' %>")
          format("opentype"),
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.woff2' %>")
          format("woff2"),
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.woff' %>")
          format("woff"),
        url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.svg#ThisIsTheFuture' %>")
          format("svg");
      font-weight: normal;
      font-style: normal;
    }

    html,
    body {
      margin: 0;
      font-family: "Work Sans", sans-serif;
      scroll-snap-type: y mandatory;
      overflow-y: scroll;
      height: 100%;
    }

    nav {
      position: fixed !important;
      top: 0 !important;
      left: 0 !important;
      width: 100% !important;
      z-index: 20 !important;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.9),
        rgba(0, 0, 0, 0)
      ) !important;
      padding: 10px !important;
    }

    section {
      scroll-snap-align: start;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      width: 100%;
    }

    #carouselExampleFade {
      width: 100%;
      height: 100%;
    }
    .carousel-inner {
      width: 100%;
      height: 100%;
    }
    .carousel-inner picture,
    .carousel-inner img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .special-section {
      width: 100%;
      text-align: center;
    }

    .special-section video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }

    .container-content {
      position: relative;
      z-index: 1;
      text-align: center;
      color: white;
      max-width: 1200px;
      margin: auto;
      padding-top: 8%;
    }

    .btn {
      background-color: #ff007f;
      color: white;
      padding: 15px 30px;
      font-size: 1.2rem;
      border-radius: 15px;
      border: none;
      margin-top: 20px;
      letter-spacing: 2px;
    }

    h1 {
      font-family: "ThisIsTheFuture", sans-serif;
    }

    h2 {
      font-family: "Work Sans", sans-serif;
    }

    .rounded-images {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
    }

    .special-section .row {
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    .special-section .col-md-4 {
      max-width: 30%;
      text-align: center;
    }

    .special-section .col-md-4 img:first-child {
      position: absolute;
      max-width: 80%;
      top: -80px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 2;
    }

    .special-section .col-md-4 img:last-child {
      max-width: 100%;
      border-radius: 10px;
      z-index: 1;
    }

    .container-content h1 {
      font-size: 2.2rem;
      margin-bottom: 10px;
    }

    .container-content h2 {
      font-size: 1.5rem;
      margin-bottom: 4.5em;
    }

    p {
      margin-top: 0.5em;
    }

    .new-section {
      position: relative;
      height: 100vh;
      background-color: #2e2057;
      overflow: hidden;
    }

    .main-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
    }

    .background-rect {
      position: absolute;
      width: 40%;
      height: auto;
      z-index: 1;
      transform-origin: center;
      transition: transform 0.3s ease;
      border: 3px solid transparent;
      border-image: linear-gradient(135deg, #ff007f, #3e21de) 1;
    }

    .bg-rect-1 {
      top: 20%;
      left: 0%;
      width: 18%;
      transform: rotate(-10deg);
      z-index: 3;
    }

    .bg-rect-2 {
      bottom: 16%;
      right: -2%;
      width: 18%;
      transform: rotate(6deg);
    }

    .content {
      position: relative;
      z-index: 2;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .center-image {
      max-width: 50%;
      height: auto;
      z-index: 5;
    }

    .corner-image {
      position: absolute;
      width: 15%;
      height: auto;
    }
    .top-left {
      top: 0%;
      left: 1%;
      width: 30%;
      animation: float-horizontal 4s ease-in-out infinite;
    }
    .top-right {
      top: 0%;
      right: 0%;
      width: 25%;
      animation: float-vertical 3s ease-in-out infinite;
    }
    .bottom-left {
      position: absolute;
      z-index: 9 !important;
      bottom: -2%;
      left: 2%;
      width: 37%;
      animation: float-vertical 3s ease-in-out infinite;
    }
    .parent-selector {
      position: static !important;
      z-index: auto !important;
      transform: none !important;
      perspective: none !important;
      overflow: visible !important;
    }
    .bottom-right {
      bottom: 0%;
      right: -2%;
      width: 25%;
      animation: float-horizontal 4s ease-in-out infinite;
    }

    @keyframes float-vertical {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @keyframes float-horizontal {
      0%,
      100% {
        transform: translateX(0);
      }
      50% {
        transform: translateX(-10px);
      }
    }

    .btn-concept {
      position: relative;
      margin-top: 40px;
      padding: 15px 30px;
      background-color: #ff007f;
      color: white;
      font-family: "ThisIsTheFuture", sans-serif;
      font-size: 1.5rem;
      text-align: center;
      text-decoration: none;
      border-radius: 10px;
      letter-spacing: 1px;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      z-index: 10;
      display: inline-block;
      animation: simulate-click 1.5s infinite ease-in-out;
    }
    .btn-concept:hover {
      text-decoration: none;
    }

    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    @keyframes simulate-click {
      0% {
        transform: scale(1);
        box-shadow: 0 8px 25px rgba(255, 0, 127, 0.8);
      }
      50% {
        transform: scale(0.95);
        box-shadow: 0 4px 20px rgba(255, 0, 127, 0.6);
      }
      100% {
        transform: scale(1);
        box-shadow: 0 8px 25px rgba(255, 0, 127, 0.8);
      }
    }

    .franchise-section {
      position: relative;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      background-color: #2e2057;
    }

    .franchise-section .background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
    }
    .franchise-section .background video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
    }

    .franchise-section .content {
      position: relative;
      z-index: 1;
      text-align: center;
    }

    .franchise-section .section-title {
      font-family: "ThisIsTheFuture", sans-serif;
      font-size: 3rem;
      color: white;
      margin-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .franchise-section .center-video {
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 40%;
      height: auto;
      border-radius: 15px;
      object-fit: cover;
      border-radius: 15px;
    }


    .special-section .col-md-4 {
      position: relative;
      text-align: center;
      overflow: visible;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      will-change: transform, box-shadow;
    }
    .special-section .col-md-4:hover {
      transform: scale(1.01);
      box-shadow: 0 4px 12px rgba(0, 0, 255, 0.2);
    }

    .special-section .col-md-4 img:first-of-type {
      position: absolute;
      top: -90px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 2;
      animation: none;
    }

    .special-section .col-md-4:hover img:first-of-type {
      animation: bounce-continuous 0.8s ease infinite;
    }

    .special-section .col-md-4 img.rounded-images {
      position: relative;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      z-index: 1;
    }

    .special-section .col-md-4:hover img.rounded-images {
      transform: scale(1.01);
    }

    .special-section .col-md-4 img.rounded-images::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        45deg,
        rgba(0, 0, 255, 0.2),
        rgba(255, 0, 255, 0.2)
      );
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    .special-section .col-md-4:hover img.rounded-images::before {
      opacity: 1;
    }
    @keyframes bounce-continuous {
      0%,
      100% {
        transform: translate(-50%, 0);
      }
      50% {
        transform: translate(-50%, -5px);
      }
    }

    .button {
      --color: #fff;
      --color-hover: var(--color);
      --background: #ff007f;
      --background-hover: var(--background);
      --hover-back: #6d58ff;
      --hover-front: #5c86ff;
      padding: 15px 30px;
      border-radius: 10px;
      letter-spacing: 1px;
      margin-top: 40px;
      font-size: 1.5rem;
      font-weight: 600;
      font-family: "ThisIsTheFuture", sans-serif;
      border: none;
      outline: none;
      position: relative;
      overflow: hidden;
      cursor: pointer;
      color: var(--c, var(--color));
      background: var(--b, var(--background));
      transition: color 0.2s, background 0.3s;
      animation: simulate-click 1.5s infinite ease-in-out;
    }
    .button:not(.simple)::before,
    .button:not(.simple)::after {
      content: "";
      position: absolute;
      background: var(--pb, var(--hover-back));
      top: 0;
      left: 0;
      right: 0;
      height: 200%;
      border-radius: 40%;
      transform: translateY(50%);
      transition: transform 0.4s ease-in, border-radius 0.5s ease;
      z-index: 0
    }
    .button:not(.simple)::after {
      background: var(--hover-front);
      transition-delay: 0.02s;
    }
    .button.alternative {
      --color-hover: #2b3044;
      --background: #ff007f;
      --hover-back: #6d58ff;
      --hover-front: #6d58ff;
    }
    .button.in {
      --c: var(--color-hover);
      --b: var(--background-hover);
    }
    .button.in::before,
    .button.in::after {
      transform: translateY(0);
      border-radius: 5%;
    }
    .button.out {
      --name: move-out;
    }
    .button div {
      z-index: 1;
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .button div span {
      display: inline-block;
      backface-visibility: hidden;
      transform: translateZ(0);
    }

    .second-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100vh;
      background-color: #000;
      color: #fff;
      padding: 0 5%;
    }
    .left-content {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .promo-video {
      border-radius: 36px;
      margin-top: 10%;
      width: 55%
      transform: rotate(-3deg);
    }
    .right-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      gap: 20px;
    }
    .game-text img {
      width: 100%;
      animation: floater 3s ease-in-out infinite;
    }
    @keyframes floater {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    .social-stats {
      display: flex;
      justify-content: center;
      gap: 40px;
      margin: 20px 0;
    }
    .stat {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5px;
    }
    .stat i {
      font-size: 2.5rem;
      color: #ff007f;
      animation: bounce 2s infinite;
    }
    .stat span {
      font-size: 1.8rem;
      font-weight: bold;
    }
    .follow-button .btn {
      background-color: #4630ff;
      color: #fff;
      padding: 15px 30px;
      font-size: 1.2rem;
      border-radius: 5px;
      text-transform: uppercase;
      font-weight: bold;
      transition: transform 0.3s, background-color 0.3s;
      text-decoration: none;
    }
    .follow-button .btn:hover {
      transform: scale(1.1);
      background-color: #3700b3;
    }
    .custom-background {
      background: url("<%= asset_path 'FRANCHISE/background-franchisee-1920.png' %>")
        no-repeat center center;
      background-size: cover;
    }

    @keyframes bounce {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
  </style>
</head>
