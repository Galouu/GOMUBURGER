<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MENU</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        @font-face {
            font-family: "ThisIsTheFuture";
            src: url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.eot' %>");
            src: url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.eot' %>#iefix") format("embedded-opentype"),
                url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.ttf' %>") format("truetype"),
                url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.otf' %>") format("opentype"),
                url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.woff2' %>") format("woff2"),
                url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.woff' %>") format("woff"),
                url("<%= asset_path 'ThisIsTheFuture/This_Is_The_Future.svg#ThisIsTheFuture' %>") format("svg");
            font-weight: normal;
            font-style: normal;
        }
        body {
            background-image: url('<%= asset_path('BARREMENU/BACKGROUND/MENU_BACKGROUND.png') %>');
            background-size: cover;
            background-position: center;
            background-color: #111111;
            background-attachment: fixed;
            font-family: 'Arial', sans-serif;
            color: white;
            margin: 0;
            padding: 0;
        }

        .menu-container {
            position: relative;
            background-color: black;
            padding: 20px 20px 0px 20px;
            overflow: hidden;
        }

        .menu-container::-webkit-scrollbar {
            display: none;
        }

        .menu-top {
            display: flex;
            align-items: center;
            overflow-x: auto;
            scroll-behavior: smooth;
            white-space: nowrap;
            padding: 0 20px;
            scrollbar-width: none;
        }

        .menu-item {
            font-family: "ThisIsTheFuture", sans-serif;
            font-size: 12px;
            padding: 6px 17px;
            margin: 0 10px;
            border-radius: 15px 0px 15px 0px;
            color: white;
            border: 2px solid #3E21DE;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .menu-item:hover, .menu-item.active {
            background-color: #3E21DE;
            color: white;
        }

        /* Écrans de 1024px et plus */
        @media (min-width: 1024px) {
            .menu-container {
                padding: 20px 20px 10px 20px;
            }

            .menu-top {
                padding: 0 20px;
                justify-content: center;
            }

            .menu-item {
                font-size: 12px;
                padding: 6px 17px;
                margin: 0 10px;
            }
        }

        /* Écrans de 768px et moins */
        @media (max-width: 768px) {
            .menu-container {
                padding: 20px 20px 0px 20px;
            }

            .menu-top {
                padding: 0 20px;
            }

            .menu-item {
                font-size: 20px;
                padding: 8px 8px;
                margin: 0px 6px;
            }
        }

        /* Écrans de 576px et moins */
        @media (max-width: 576px) {
            .menu-container {
                padding: 20px 20px 0px 20px;
            }

            .menu-top {
                padding: 0 15px;
            }

            .menu-item {
                font-size: 16px;
                padding: 8px 8px;
                margin: 0px 6px;
            }
        }

        /* Écrans de 375px et moins */
        @media (max-width: 375px) {

            .arrow {
                top: 55%;
            }
            .menu-container {
                padding: 5px 5px 0px 5px;
            }

            .menu-top {
                padding: 0 30px;
            }

            .menu-item {
                font-size: 14px;
                padding: 8px 8px;
                margin: 0px 6px;
            }
        }

        /* Écrans de 320px et moins */
        @media (max-width: 320px) {
            .menu-container {
                padding: 5px 5px 0px 5px;
            }

            .menu-top {
                padding: 0 30px;
            }

            .menu-item {
                font-size: 12px;
                padding: 8px 8px;
                margin: 0px 6px;
            }
        }

        .content {
            text-align: center;
            margin-top: 1%;
        }

        .large-card {
            width: 55%;
            margin: 0 auto;
            position: relative;
        }

        .large-card img {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            object-fit: cover;
        }

        .discover-button {
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            padding: 8px 50px;
            background-color: #000000;
            color: white;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-family: "Work Sans", sans-serif;
            overflow: hidden;
        }

        .discover-button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: -100%;
            width: 200%;
            height: 300%;
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(30deg);
            transition: left 0.3s ease;
        }

        .discover-button:hover::before {
            left: 100%;
            transition: left 0.6s ease;
        }

        .discover-button:hover {
            background-color: #5500cc;
        }

        .overlay-button {
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            padding: 8px 50px;
            background-color: transparent;
            border: none;
            cursor: pointer;
            font-family: "Work Sans", sans-serif;
        }

        .small-cards {
            display: flex;
            justify-content: space-evenly;
            gap: 20px;
            margin-top: 50px;
            max-width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

        .small-card {
            width: 22%;
            height: 160px;
            background-color: #444;
            border-radius: 10px;
            transition: transform 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .small-card img {
            width: 100%;
            height: 125%;
            border-radius: 10px;
            object-fit: cover;
        }

        .small-card:hover {
            transform: scale(1.05);
        }

        .baogers-section {
            display: none;
        }

        .baoger-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 5%;
            max-width: 80%;
            margin: 0 auto;
            margin-top: 8px;
        }

        .baoger-item {
            background-color: #000000;
            padding: 20px;
            border-radius: 10px;
            width: 230px;
            text-align: center;
            position: relative;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-bottom: 3%;
        }

      .baoger-item h3 {
          font-family: "ThisIsTheFuture", sans-serif;
          font-size: 1.5em;
          color: white;
          min-height: 60px;
          display: flex;
          align-items: center;
          justify-content: center;
          text-align: center;
          line-height: 1.2;
      }

        .baoger-item img {
            width: 100%;
            border-radius: 10px;
        }

        .baoger-item p {
            font-size: 0.8em;
            margin-bottom: 12px;
            color: white;
            font-family: "Jura", sans-serif;
        }

        .baoger-item .btn {
            position: absolute;
            bottom: -15px;
            right: 15px;
            background-color: #ff007f;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 15px 0px 15px 0px;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            font-size: 0.8em;
            font-family: "Jura", sans-serif;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .baoger-item .btn:hover {
            background-color: #cc0066;
            transform: scale(1.05);
        }

        .filters {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 20px;
            max-width: 77%;
            margin: 0 auto;
            gap: 10px;
            margin-top: 5px;
            margin-bottom: 25px;
        }

        .filter-item {
            font-family: "Jura", sans-serif;
            font-size: 0.8em;
            padding: 4px 14px;
            border-radius: 8px;
            color: white;
            border: 1px solid #3E21DE;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
            text-transform: uppercase;
        }

        .filter-item:hover {
            background-color: #3E21DE;
            color: white;
        }

        .filter-item.active {
            background-color: #3E21DE;
            color: white;
        }

        /* Écrans de 1200px et moins */
        @media (max-width: 1200px) {
            .large-card {
                width: 70%;
            }
            .small-cards {
                max-width: 100%;
                margin-bottom: 15%;
            }
            .discover-button {
                padding: 6px 40px;
                font-size: 1em;
            }
            .small-card img {
                width: 105%;
                height: 130%;
            }
            .menu-item {
                font-size: 12px;
            }
        }

        @media (max-width: 992px) {
            .large-card {
                width: 80%;
            }
            .small-cards {
                max-width: 90%;
            }
            .menu-item {
                font-size: 10px;
                padding: 5px 6px;
            }
            .discover-button {
                padding: 6px 35px;
                font-size: 0.95em;
            }
            .baoger-item h3 {
                font-size: 1.3em;
            }
            .baoger-item {
                margin-bottom: 6%;
            }
        }

        /* Écrans de 768px et moins */
        @media (max-width: 768px) {
            .menu-top {
                overflow: auto;
                white-space: nowrap;
                padding: 10px;
            }
            .menu-item {
                font-size: 14px;
                padding: 5px 8px;
                margin: 0 4px;
            }
            .arrow {
                display: block;
            }
            .large-card {
                width: 98%;
            }
            .small-cards {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 30px;
                padding: 0 20px;
                margin-top: 20px;
                max-width: 92%;
                margin-bottom: 15%;
            }
            .small-card {
                width: 100%;
                height: auto;
            }
            .small-card img {
                height: 100% !important;
            }
            .discover-button {
                padding: 4px 30px;
                font-size: 0.9em;
            }
            .baoger-item {
                margin-bottom: 8%;
                width: 215px;
            }
        }

        /* Écrans de 576px et moins */
        @media (max-width: 576px) {
              .menu-container {
                padding: 20px 15px 0px 15px;
            }
            .large-card {
                width: 100%;
            }
            .small-cards {
                max-width: 95%;
                gap: 24px;
            }
            .menu-item {
                font-size: 12px;
                padding: 6px 10px;
            }
            .discover-button {
                padding: 4px 25px;
                font-size: 0.85em;
            }
            .baoger-item h3 {
                font-size: 1em;
            }
            .filter-item {
                font-size: 0.7em;
                padding: 4px 6px;
            }
            .baoger-item {
                margin-bottom: 10%;
                width: 170px;
                border: thin double #ff007f;
            }
            .baoger-item p {
                font-size: 0.7em;
            }
            .baoger-grid {
                max-width: 100%;
            }
        }

        /* Écrans de 375px et moins */
        @media (max-width: 375px) {
            .menu-top {
                padding: 5px;
                padding-left: 20px;
            }
            .menu-item {
                font-size: 10px;
                padding: 6px 12px;
            }
            .large-card {
                width: 100%;
            }
            .discover-button {
                padding: 4px 20px;
                font-size: 0.8em;
            }
            .small-cards {
                grid-template-columns: repeat(2, 1fr);
                padding: 0 10px;
                gap: 14px;
            }
            .baoger-item h3 {
                font-size: 1em;
            }
            .baoger-item {
                padding: 10px;
                margin-bottom: 10%;
                width: 142px;
                border: thin double #ff007f;
            }
            .baoger-item p {
                font-size: 0.7em;
                margin-bottom: 21px;
            }
            .filter-item {
                padding: 4px 5px;
                font-size: 0.6em;
            }
        }
        @media (max-width: 320px) {
            .menu-item {
                font-size: 14px;
                padding: 6px 12px;
            }

            .menu-top {
                padding: 5px;
                padding-left: 4px;
            }
        }
    </style>
</head>
<body>
<div class="menu-container">
    <div class="menu-top" id="menu-top">
        <div class="menu-item active" id="menu-btn" onclick="showMenu()">Menu</div>
        <div class="menu-item" id="baogers-btn" onclick="showBaogers()">Baogers</div>
        <div class="menu-item" onclick="showCategory('bowls')">Bowls</div>
        <div class="menu-item" onclick="showCategory('bon-plan')">Bon Plan</div>
        <div class="menu-item" onclick="showCategory('starters')">Starters</div>
        <div class="menu-item" onclick="showCategory('boissons')">Boissons</div>
        <div class="menu-item" onclick="showCategory('sides')">Sides</div>
        <div class="menu-item" onclick="showCategory('dessert')">Desserts</div>
    </div>
</div>

    <div class="content" id="main-content">
        <div class="large-card" id="large-card">
            <img src="<%= asset_path('BARREMENU/CARD/NEW_MENU.png') %>" alt="Smoker Baoger">
            <div class="discover-button" onclick="openSection('baogers-section')">Découvrir</div>
            <button class="overlay-button"></button>
        </div>

    <div class="small-cards" id="small-cards">
        <div class="small-card" onclick="openSection('baogers-section')">
            <img src="<%= asset_path('BARREMENU/CARD/MENU_1.png') %>" alt="Baoger Beef">
        </div>
        <div class="small-card" onclick="openSection('boissons-section')">
            <img src="<%= asset_path('BARREMENU/CARD/MENU_2.png') %>" alt="Baoger Chicken">
        </div>
        <div class="small-card" onclick="openSection('bon-plan-section')">
            <img src="<%= asset_path('BARREMENU/CARD/MENU_3.png') %>" alt="Baoger Veggie">
        </div>
        <div class="small-card" onclick="openSection('sides-section')">
            <img src="<%= asset_path('BARREMENU/CARD/MENU_4.png') %>" alt="Baoger Double">
        </div>
    </div>
        </div>

    <div class="baogers-section" id="baogers-section">
        <div class="filters">
            <div class="filter-item active" data-category="all" onclick="filterBaogers('all')">Tous</div>
            <div class="filter-item" data-category="boeuf" onclick="filterBaogers('boeuf')">
                <i class="fa-solid fa-cow fa-sm" style="color: #ffffff; margin-right: 5px;"></i>Boeuf
            </div>
            <div class="filter-item" data-category="poulet" onclick="filterBaogers('poulet')">
                <i class="fa-solid fa-drumstick-bite fa-sm" style="color: #ffffff; margin-right: 5px;"></i>Poulet
            </div>
            <div class="filter-item" data-category="veggie" onclick="filterBaogers('veggie')">
                <i class="fa-solid fa-leaf fa-sm" style="color: #ffffff; margin-right: 5px;"></i>Veggie
            </div>
        </div>

        <div class="baoger-grid">
            <% @burgers.each do |burger| %>
                <% if burger.category.present? && burger.image.present? && burger.name.present? && burger.description.present? %>
                    <div class="baoger-item" data-category="<%= burger.category %>">
                        <h3><%= burger.name.upcase.gsub("\n", "<br>").html_safe %></h3>
<img src="<%= burger.image %>" alt="Baoger <%= burger.name %>">
                        <p><%= burger.description %></p>
                        <%= link_to 'En savoir +', burger_description_path(burger_name: burger.name), class: 'btn' %>
                    </div>
                <% else %>
                    <div class="baoger-item">
                        <p>Informations sur ce burger non disponibles</p>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>

    <!-- NOUVELLES SECTIONS POUR CHAQUE CATÉGORIE -->

    <!-- SECTION BOWLS -->
    <div class="baogers-section" id="bowls-section" style="display:none;">
        <div class="baoger-grid">
            <% @bowls.each do |bowl| %>
                <div class="baoger-item">
                    <h3><%= bowl.name.upcase %></h3>
                    <img src="<%= asset_path('BOWL/' + bowl.image) %>" alt="<%= bowl.name %>">
                    <p><%= bowl.description %></p>
                    <%= link_to 'En savoir +', bowl_description_path(bowl_name: bowl.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
    </div>

    <!-- SECTION BON PLAN -->
    <div class="baogers-section" id="bon-plan-section" style="display:none;">
        <div class="baoger-grid">
            <% @bonplans.each do |bon_plan| %>
                <div class="baoger-item">
                    <h3><%= bon_plan.name.upcase %></h3>
                    <img src="<%= bon_plan.image %>" alt="<%= bon_plan.name %>">
                    <p><%= bon_plan.description %></p>
                    <%= link_to 'En savoir +', bon_plan_description_path(bonplan_name: bon_plan.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
    </div>

    <!-- SECTION STARTERS -->
    <div class="baogers-section" id="starters-section" style="display:none;">
        <div class="baoger-grid">
            <% @starters.each do |starter| %>
                <div class="baoger-item">
                    <h3><%= starter.name.upcase %></h3>
                    <img src="<%= asset_path('STARTER/' + starter.image) %>" alt="<%= starter.name %>">
                    <p><%= starter.description %></p>
                    <%= link_to 'En savoir +', starter_description_path(starter_name: starter.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
    </div>

    <!-- SECTION SIDES -->
    <div class="baogers-section" id="sides-section" style="display:none;">
        <div class="baoger-grid">
            <% @sides.each do |side| %>
                <div class="baoger-item">
                    <h3><%= side.name.upcase %></h3>
                    <img src="<%= side.image %>" alt="<%= side.name %>">
                    <p><%= side.description %></p>
                    <%= link_to 'En savoir +', side_description_path(side_name: side.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
    </div>

    <!-- SECTION DESSERT -->
    <div class="baogers-section" id="dessert-section" style="display:none;">
        <div class="baoger-grid">
            <% @desserts.each do |dessert| %>
                <div class="baoger-item">
                    <h3><%= dessert.name.upcase %></h3>
                    <img src="<%= dessert.image %>" alt="<%= dessert.name %>">
                    <p><%= dessert.description %></p>
                    <%= link_to 'En savoir +', dessert_description_path(dessert_name: dessert.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
    </div>

    <!-- SECTION BOISSONS -->
    <div class="baogers-section" id="boissons-section" style="display:none;">
        <div class="filters">
            <div class="filter-item active" data-category="all" onclick="filterBoissons('all')">Tous</div>
            <div class="filter-item" data-category="mocktail" onclick="filterBoissons('mocktail')">
                <i class="fa-solid fa-cocktail fa-sm" style="color: #ffffff; margin-right: 5px;"></i>Mocktail
            </div>
            <div class="filter-item" data-category="bubble" onclick="filterBoissons('bubble')">
                <i class="fa-solid fa-mug-tea fa-sm" style="color: #ffffff; margin-right: 5px;"></i>Bubble-Tea
            </div>
            <div class="filter-item" data-category="limonade" onclick="filterBoissons('limonade')">
                <i class="fa-solid fa-glass-citrus" style="color: #ffffff; margin-right: 5px;"></i>Limonade
            </div>
        </div>

        <div class="baoger-grid">
            <% @drinks.each do |drink| %>
                <div class="baoger-item" data-category="<%= drink.category %>">
                    <h3><%= drink.name.upcase %></h3>
                    <img src="<%= drink.image %>" alt="<%= drink.name %>">
                    <p><%= drink.description %></p>
                    <%= link_to 'En savoir +', drink_description_path(drink_name: drink.name), class: 'btn' %>
                </div>
            <% end %>
        </div>
<script>

    function showBaogers() {
        document.getElementById('main-content').style.display = 'none';
        hideAllCategories();
        document.getElementById('baogers-section').style.display = 'block';
        document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
        document.getElementById('baogers-btn').classList.add('active');
    }

    function showMenu() {
        document.getElementById('main-content').style.display = 'block';
        document.getElementById('baogers-section').style.display = 'none';
        hideAllCategories();
        document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
        document.getElementById('menu-btn').classList.add('active');
    }

    function filterBaogers(category) {
        let items = document.querySelectorAll('.baoger-item');
        let filterButtons = document.querySelectorAll('.filter-item');
        filterButtons.forEach(button => button.classList.remove('active'));
        document.querySelector(`.filter-item[data-category="${category}"]`).classList.add('active');
        items.forEach(item => {
            if (item.closest('#baogers-section')) {
                item.style.display = (category === 'all' || item.getAttribute('data-category') === category) ? 'block' : 'none';
            }
        });
    }

    function filterBoissons(category) {
        let items = document.querySelectorAll('.baoger-item');
        let filterButtons = document.querySelectorAll('#boissons-section .filter-item');
        filterButtons.forEach(button => button.classList.remove('active'));
        document.querySelector(`.filter-item[data-category="${category}"]`).classList.add('active');
        items.forEach(item => {
            if (item.closest('#boissons-section')) {
                item.style.display = (category === 'all' || item.getAttribute('data-category') === category) ? 'block' : 'none';
            }
        });
    }

    function hideAllCategories() {
        const categories = ['bowls', 'bon-plan', 'starters', 'boissons', 'sides', 'dessert'];
        categories.forEach(cat => {
            const sec = document.getElementById(`${cat}-section`);
            if (sec) sec.style.display = 'none';
        });
    }

    function showCategory(category) {
        document.getElementById('main-content').style.display = 'none';
        document.getElementById('baogers-section').style.display = 'none';
        hideAllCategories();
        const section = document.getElementById(`${category}-section`);
        if (section) section.style.display = 'block';
        document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
        document.querySelector(`.menu-item[onclick*="${category}"]`).classList.add('active');
        if (category === 'boissons') {
            filterBoissons('all');
        }
    }

    function checkOverflow() {
        const menuTop = document.getElementById('menu-top');
        const leftArrow = document.getElementById('left-arrow');
        const rightArrow = document.getElementById('right-arrow');

        if (menuTop.scrollWidth > menuTop.clientWidth) {
            if(leftArrow) leftArrow.style.display = 'block';
            if(rightArrow) rightArrow.style.display = 'block';
        } else {
            if(leftArrow) leftArrow.style.display = 'none';
            if(rightArrow) rightArrow.style.display = 'none';
        }
    }
    function openSection(sectionId) {
        const sections = document.querySelectorAll('.baogers-section');
        sections.forEach(section => {
            section.style.display = 'none';
        });

        const selectedSection = document.getElementById(sectionId);
        if (selectedSection) {
            selectedSection.style.display = 'block';
        }

        document.getElementById('main-content').style.display = 'none';

        document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
        const menuItem = document.querySelector(`.menu-item[onclick*="${sectionId.split('-')[0]}"]`);
        if (menuItem) menuItem.classList.add('active');
    }
    window.addEventListener('resize', checkOverflow);
    document.addEventListener('DOMContentLoaded', () => {
        checkOverflow();
        filterBaogers('all');
    });
</script>
